$appHeight = 768px
$topHeight = 65px
$appWidth = 1024px
$leftWidth = 215px
$footerHeight = 20px
$updateHeight = 25px

#app
  width $appWidth
  height $appHeight
  margin auto
  box-sizing border-box
  border 1px solid black
  font-family '標楷體'

#top
  width 100%
  height $topHeight
  text-align center

#middle
  width 100%
  height 'calc(%s - %s - %s)' % ($appHeight $topHeight $footerHeight)
  clear both

#left
  width $leftWidth
  height 100%
  float left

#menu
  height 'calc(100% - %s)' % $updateHeight
  h1
    color #FF00FF
    text-align center
    text-decoration underline
  table
    margin auto
  td
    width 200px
    height 35px
    font-size 24px
    text-align center
    background-image url('~@/assets/images/menu1.png')
    background-position center
    background-size contain
    background-repeat no-repeat
    &:hover
      background-image url('~@/assets/images/menu2.png')

#update
  text-align center
  height $updateHeight
  width 100%

#right
  width 'calc(100% - %s)' % $leftWidth
  height 100%
  float right

#marquee
  height 29px
  width 100%
  font-size 20px
  color #00F

#content
  height calc(100% - 29px)
  width 100%
  font-size 24px
  background:  url('~@/assets/images/0101.jpg')
  font-weight bold
  font-style italic
  text-align center
  color #00f
  img
    width 250px
    height 250px

#footer
  text-align center
  width 100%
  height 20px